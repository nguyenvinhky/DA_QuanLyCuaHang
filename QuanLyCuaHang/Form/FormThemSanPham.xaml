<Window x:Class="QuanLyCuaHang.Form.FormThemSanPham"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QuanLyCuaHang.Form"
        xmlns:uc="clr-namespace:QuanLyCuaHang.View"
        mc:Ignorable="d"
        DataContext="{StaticResource spVM}"
        Title="FormThongTinNhanVien" Height="580" Width="840"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        Name="Form"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.RowSpan="3"
                 CornerRadius="25">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="White" Offset="0"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <uc:ConTrolBarUC Grid.Row="0"/>

        <TextBlock Grid.Row="1" 
                   Text="SẢN PHẨM MỚI"
                   Foreground="MediumAquamarine"
                   FontSize="30"
                   FontWeight="Black"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="20 0 20 0"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Margin="10">
                <Border Width="400"
                        Height="400"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding ImagesSP,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>

                <Button Grid.Column="2"
                        Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}"
                        Content="CHỌN ẢNH SẢN PHẨM"
                        Height="50"
                        Width="280"
                        FontSize="15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="25"
                        Background="MediumAquamarine"
                        FontWeight="Black"
                        BorderThickness="3"
                        BorderBrush="Black"
                        Foreground="Black"
                        Command="{Binding ChooseImages}"/>
            </StackPanel>

            <Grid Grid.Column="1"
                  Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Margin="5">
                        <TextBlock Text="MÃ SẢN PHẨM"
                                   FontWeight="Black"
                                   Foreground="MediumAquamarine"
                                   Margin="20 0 0 0"
                                   FontSize="15"/>
                        <TextBox  BorderBrush="Black"
                                  Text="{Binding Id}"
                                  BorderThickness="3"
                                  FontSize="11"
                                  FontWeight="Black"
                                  materialDesign:TextFieldAssist.TextFieldCornerRadius="25"
                                  materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                                  materialDesign:TextFieldAssist.TextBoxViewMargin="10"
                                  Width="auto"
                                  Height="50"
                                  materialDesign:HintAssist.Hint="MÃ SẢN PHẨM"/>
                    </StackPanel>


                    <StackPanel Grid.Column="1"
                                Margin="5">
                        <TextBlock Text="TÊN SẢN PHẨM"
                                   FontWeight="Black"
                                   Foreground="MediumAquamarine"
                                   Margin="20 0 0 0"
                                   FontSize="15"/>
                        <TextBox  BorderBrush="Black"
                                  Text="{Binding TenSP}"
                                  BorderThickness="3"
                                  FontSize="11"
                                  FontWeight="Black"
                                  materialDesign:TextFieldAssist.TextFieldCornerRadius="25"
                                  materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                                  materialDesign:TextFieldAssist.TextBoxViewMargin="10"
                                  Width="auto"
                                  Height="50"
                                  materialDesign:HintAssist.Hint="TÊN SẢN PHẨM"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Margin="5">
                        <TextBlock Text="GIÁ BÁN"
                                   FontWeight="Black"
                                   Foreground="MediumAquamarine"
                                   Margin="20 0 0 0"
                                   FontSize="15"/>
                        <TextBox  BorderBrush="Black"
                                  Text="{Binding GiaBan}"
                                  BorderThickness="3"
                                  FontSize="11"
                                  FontWeight="Black"
                                  materialDesign:TextFieldAssist.TextFieldCornerRadius="25"
                                  materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                                  materialDesign:TextFieldAssist.TextBoxViewMargin="10"
                                  Width="auto"
                                  Height="50"
                                  materialDesign:HintAssist.Hint="GIÁ BÁN"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Margin="5">
                        <TextBlock Text="LOẠI SẢN PHẨM"
                                   FontWeight="Black"
                                   Foreground="MediumAquamarine"
                                   Margin="20 0 0 0"
                                   FontSize="15"/>
                        <ComboBox Grid.Column="1"
                              BorderBrush="Black"
                              BorderThickness="3"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Foreground="Black"
                              FontWeight="Black"
                              FontSize="9"
                              ItemsSource="{Binding ListCBB_LSP}"
                              SelectedValue="{Binding SelectedValue_LSP}"
                              DisplayMemberPath="TenLoaiSP"
                              Width="auto"
                              materialDesign:TextFieldAssist.TextFieldCornerRadius="25"/>

                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="2"
                            Margin="5">
                    <TextBlock Text="GIẢM GIÁ"
                                   FontWeight="Black"
                                   Foreground="MediumAquamarine"
                                   Margin="20 0 0 0"
                                   FontSize="15"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox  BorderBrush="Black"
                                  Grid.Column="0"
                                  Grid.ColumnSpan="2"
                                  Text="{Binding GiamGia}"
                                  BorderThickness="3"
                                  FontSize="12"
                                  FontWeight="Black"
                                  materialDesign:TextFieldAssist.TextFieldCornerRadius="25"
                                  materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                                  materialDesign:TextFieldAssist.TextBoxViewMargin="10"
                                  Width="auto"
                                  Height="50"
                                  materialDesign:HintAssist.Hint="GIẢM GIÁ"/>
                        <TextBlock Grid.Row="1"
                                   Grid.ColumnSpan="2"
                                   Text="%"
                                   FontWeight="Black"
                                   FontSize="20"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Margin="15"/>
                    </Grid>
                   
                </StackPanel>

                <StackPanel Grid.Row="3"
                            Margin="5">
                    <TextBlock Text="GHI CHÚ"
                                   FontWeight="Black"
                                   Foreground="MediumAquamarine"
                                   Margin="20 0 0 0"
                                   FontSize="15"/>
                    <TextBox  BorderBrush="Black"
                                  Text="{Binding GhiChu}"
                                  BorderThickness="3"
                                  FontSize="11"
                                  FontWeight="Black"
                                  AcceptsReturn="True"
                                  TextWrapping="Wrap"
                                  VerticalScrollBarVisibility="Auto"
                                  materialDesign:TextFieldAssist.TextFieldCornerRadius="25"
                                  materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                                  materialDesign:TextFieldAssist.TextBoxViewMargin="10"
                                  Width="auto"
                                  Height="130"
                                  materialDesign:HintAssist.Hint="THÔNG TIN THÊM"/>
                </StackPanel>
                
                <Grid Grid.Row="4"
                      Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                        Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}"
                        Content="THÊM"
                        Height="50"
                        Width="auto"
                        FontSize="15"
                        Margin="10 0 10 10"
                        materialDesign:ButtonAssist.CornerRadius="25"
                        Background="MediumAquamarine"
                        FontWeight="Black"
                        BorderThickness="3"
                        BorderBrush="Black"
                        Foreground="Black"
                        Command="{Binding AddSanPham}"
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />

                    <Button Grid.Column="1"
                        Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}"
                        Content="HỦY"
                        Height="50"
                        Width="auto"
                        FontSize="15"
                        Margin="10 0 10 10"
                        materialDesign:ButtonAssist.CornerRadius="25"
                        Background="MediumAquamarine"
                        FontWeight="Black"
                        BorderThickness="3"
                        BorderBrush="Black"
                        Foreground="Black"
                        Command="{Binding HuyClick}"
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Window>
