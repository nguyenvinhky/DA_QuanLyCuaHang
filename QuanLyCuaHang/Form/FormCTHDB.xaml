<Window x:Class="QuanLyCuaHang.Form.FormCTHDB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QuanLyCuaHang.Form"
        xmlns:uc="clr-namespace:QuanLyCuaHang.View"
        mc:Ignorable="d"
        Title="FormThemHoaDon" Height="720" Width="900"
        DataContext="{StaticResource DonHangVM}"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        Name="Form"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="35"
                Grid.RowSpan="3">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="MediumAquamarine" Offset="0.1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <uc:ConTrolBarUC/>

        <TextBlock Text="PHIẾU ĐƠN HÀNG"
                   Grid.Row="1"
                   FontSize="29"
                   FontWeight="Black"
                   Margin="0 10 0 0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="AUTO"/>
                <RowDefinition Height="AUTO"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border CornerRadius="35"
                    Grid.Row="0"
                    Margin="40 0 40 0">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="White" Offset="0.1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Grid Grid.Row="0"
                  Margin="70 -15 70 -15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0"
                      Margin="60 25 60 25">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="THÔNG TIN PHIẾU ĐƠN HÀNG"
                               FontSize="15"
                               FontWeight="Black"
                               HorizontalAlignment="Center"/>

                    <StackPanel Grid.Row="1">
                        <TextBlock Text="MÃ HÓA ĐƠN"
                                   FontWeight="Black"
                                   Foreground="Black"
                                   Margin="20 0 0 0"
                                   FontSize="12"/>
                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Text="{Binding SelectedItemHDB.Id}"
                         VerticalAlignment="Top"
                         Width="AUTO"
                         Height="50"
                         IsEnabled="True"
                         FontWeight="Black"
                         FontSize="9"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         BorderBrush="Black"
                         BorderThickness="3"
                         VerticalScrollBarVisibility="Auto"
                         materialDesign:TextFieldAssist.TextFieldCornerRadius="25"
                         Foreground="Black"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                   Text="MÃ NV"
                                   FontWeight="Black"
                                   Foreground="Black"
                                   Margin="20 0 0 0"
                                   FontSize="12"/>

                            <Grid Grid.Column="1"
                                Width="4"
                                Height="12"
                                Background="Black"
                                Margin="5 0 5 0"/>

                            <TextBlock Grid.Column="2"
                                   Text="TÊN NV"
                                   FontWeight="Black"
                                   Foreground="Black"
                                   FontSize="12"/>

                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.ColumnSpan="3"
                                BorderThickness="3"
                                BorderBrush="Black"
                                CornerRadius="25">
                                <Border.Background>
                                    <LinearGradientBrush>
                                        <GradientStop Color="Transparent" Offset="0"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <TextBox  BorderBrush="Transparent"
                              Text="{Binding SelectedItemHDB.IdNV}"
                              BorderThickness="3"
                              FontSize="12"
                              IsEnabled="False"
                              FontWeight="Black"
                              materialDesign:TextFieldAssist.TextFieldCornerRadius="25"
                              materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                              materialDesign:TextFieldAssist.TextBoxViewMargin="10"
                              Width="AUTO"
                              Height="50"
                              materialDesign:HintAssist.Hint="MÃ NV"/>

                            <Grid Grid.Column="1"
                                Width="4"
                                Height="12"
                                Background="Black"
                                Margin="2 0 2 0"/>

                            <TextBox Grid.Column="2" 
                              BorderBrush="Transparent"
                              Text="{Binding SelectedItemHDB.NhanVien.TenNV}"
                              BorderThickness="3"
                              FontSize="12"
                              IsEnabled="False"
                              FontWeight="Black"
                              materialDesign:TextFieldAssist.TextFieldCornerRadius="25"
                              materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                              materialDesign:TextFieldAssist.TextBoxViewMargin="10"
                              Width="AUTO"
                              Height="50"
                              materialDesign:HintAssist.Hint="TÊN NV"/>
                        </Grid>

                    </StackPanel>

                    <StackPanel Grid.Row="3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                   Text="MÃ KH"
                                   FontWeight="Black"
                                   Foreground="Black"
                                   Margin="20 0 0 0"
                                   FontSize="12"/>

                            <Grid Grid.Column="1"
                                Width="4"
                                Height="12"
                                Background="Black"
                                Margin="5 0 5 0"/>

                            <TextBlock Grid.Column="2"
                                   Text="TÊN KH"
                                   FontWeight="Black"
                                   Foreground="Black"
                                   FontSize="12"/>

                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.ColumnSpan="3"
                                BorderThickness="3"
                                BorderBrush="Black"
                                CornerRadius="25">
                                <Border.Background>
                                    <LinearGradientBrush>
                                        <GradientStop Color="Transparent" Offset="0"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <TextBox  BorderBrush="Transparent"
                              Text="{Binding SelectedItemHDB.IdKH}"
                              BorderThickness="3"
                              FontSize="12"
                              IsEnabled="False"
                              FontWeight="Black"
                              materialDesign:TextFieldAssist.TextFieldCornerRadius="25"
                              materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                              materialDesign:TextFieldAssist.TextBoxViewMargin="10"
                              Width="AUTO"
                              Height="50"
                              materialDesign:HintAssist.Hint="MÃ KH"/>

                            <Grid Grid.Column="1"
                                Width="4"
                                Height="12"
                                Background="Black"
                                Margin="2 0 2 0"/>

                            <TextBox Grid.Column="2" 
                              BorderBrush="Transparent"
                              Text="{Binding SelectedItemHDB.KhachHang.TenKH}"
                              BorderThickness="3"
                              FontSize="12"
                              IsEnabled="False"
                              FontWeight="Black"
                              materialDesign:TextFieldAssist.TextFieldCornerRadius="25"
                              materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                              materialDesign:TextFieldAssist.TextBoxViewMargin="10"
                              Width="AUTO"
                              Height="50"
                              materialDesign:HintAssist.Hint="TÊN KH"/>
                        </Grid>

                    </StackPanel>

                    <StackPanel Grid.Row="4">
                        <TextBlock Text="NGÀY LẬP PHIẾU"
                                   FontWeight="Black"
                                   Foreground="Black"
                                   Margin="20 0 0 0"
                                   FontSize="12"/>
                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Text="{Binding SelectedItemHDB.NgayBan}"
                         VerticalAlignment="Top"
                         Width="AUTO"
                         Height="50"
                         IsEnabled="False"
                         FontWeight="Black"
                         FontSize="9"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         BorderBrush="Black"
                         BorderThickness="3"
                         VerticalScrollBarVisibility="Auto"
                         materialDesign:TextFieldAssist.TextFieldCornerRadius="25"
                         Foreground="Black"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid Grid.Row="1"
                  Height="250">
                <Grid.RowDefinitions>
                    <RowDefinition Height="AUTO"/>
                    <RowDefinition Height="AUTO"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"
                  Height="350">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            CornerRadius="25"
                            BorderBrush="Transparent"
                            BorderThickness="4"
                            Width="AUTO"
                            Margin="40 10 40 10"
                            Height="60">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="White" Offset="0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <Grid Grid.Row="0"
                        Width="815"
                        Height="60"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="40 10 40 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="1.5*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="MÃ SP"
                               Grid.Column="0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="12"
                               FontWeight="ExtraBlack"
                               Foreground="OrangeRed"/>

                        <TextBlock Text="TÊN SẢN PHẨM"
                               Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="12"
                               FontWeight="ExtraBlack"
                               Foreground="OrangeRed"/>

                        <TextBlock Text="SIZE"
                               Grid.Column="2"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="12"
                               FontWeight="ExtraBlack"
                               Foreground="OrangeRed"/>

                        <TextBlock Text="SỐ LƯỢNG"
                               Grid.Column="3"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="12"
                               FontWeight="ExtraBlack"
                               Foreground="OrangeRed"/>

                        <TextBlock Text="GIÁ"
                               Grid.Column="4"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="12"
                               FontWeight="ExtraBlack"
                               Foreground="OrangeRed"/>
                    </Grid>

                    <ListView Grid.Row="1"
                          HorizontalAlignment="Center"
                          ItemsSource="{Binding ListTTHDB}"
                          Height="AUTO"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="25"
                                        Width="815"
                                        Height="50">
                                    <Border.Background>
                                        <LinearGradientBrush>
                                            <GradientStop Color="White" Offset="0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>

                                    <Grid Width="815"
                                          Height="50"
                                          Margin="5"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="1.5*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding IdSP}"
                                                   Grid.Column="0"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   FontWeight="ExtraBlack"
                                                   Foreground="Black"/>

                                        <TextBlock Text="{Binding SanPham.TenSP}"
                                                   Grid.Column="1"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   FontWeight="ExtraBlack"
                                                   Foreground="Black"/>

                                        <TextBlock Text="{Binding Size.KichThuoc}"
                                                   Grid.Column="2"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   FontWeight="ExtraBlack"
                                                   Foreground="Black"/>

                                        <TextBlock Text="{Binding SL}"
                                                   Grid.Column="3"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   FontWeight="ExtraBlack"
                                                   Foreground="Black"/>

                                        <TextBlock Text="{Binding SanPham.GiaBan, StringFormat={}{0:#,# VNĐ}}"
                                                   Grid.Column="4"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"
                                                   FontWeight="ExtraBlack"
                                                   Foreground="Black"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </Grid>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}"
                        Content="XÓA PHIẾU XUẤT"
                        FontWeight="Black"
                        Height="45"
                        Width="200"
                        Margin="40 10 0 20"
                        FontSize="12"
                        Foreground="Black"
                        HorizontalAlignment="Left"
                        materialDesign:ButtonAssist.CornerRadius="25"
                        Background="MediumAquamarine"
                        BorderBrush="Black"
                        BorderThickness="3"
                        CommandParameter="{Binding ElementName=Form}"
                        Command="{Binding XoaPhieuHDB}"/>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="TỔNG TIỀN: "
                               Foreground="Black"
                               FontWeight="Black"
                               FontSize="19"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Grid.Column="0"/>

                    <TextBlock Text="{Binding SelectedItemHDB.TongTien, StringFormat={}{0:#,# VNĐ}}"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="5"
                               FontSize="19"
                               FontWeight="Bold"
                               Foreground="Black"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
