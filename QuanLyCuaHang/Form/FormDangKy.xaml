<Window x:Class="QuanLyCuaHang.Form.FormDangKy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QuanLyCuaHang.Form"
        xmlns:uc="clr-namespace:QuanLyCuaHang.View"
        mc:Ignorable="d"
        DataContext="{StaticResource LoginVM}"
        Title="FormThongTinNhanVien" Height="650" Width="800"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        Name="Form"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.RowSpan="3"
                 CornerRadius="25"
                BorderThickness="4"
                BorderBrush="MediumAquamarine">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#afe7e8" Offset="0"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <uc:ConTrolBarUC Grid.Row="0"/>

        <TextBlock Grid.Row="1" 
                   Text="ĐĂNG KÝ"
                   Foreground="MediumAquamarine"
                   FontSize="30"
                   FontWeight="Black"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="20 0 20 0"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Margin="10">
                <Border Width="280"
                        Height="280"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        BorderBrush="White"
                        BorderThickness="10"
                        CornerRadius="140"
                        Margin="10 50 0 0">
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding Images,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>

                <Button Grid.Column="2"
                        Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}"
                        Content="CHỌN ẢNH ĐẠI DIỆN"
                        FontWeight="Bold"
                        Height="50"
                        Width="280"
                        FontSize="15"
                        Margin="10 35 10 10"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Background="MediumAquamarine"
                        BorderBrush="Aquamarine"
                        Command="{Binding ChooseImages}"
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />
            </StackPanel>

            <Grid Grid.Column="1"
                  Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBox Style="{StaticResource MaterialDesignFilledTextBox}"
                             Text="{Binding Id}"
                             VerticalAlignment="Top"
                             Width="auto"
                             Height="60"
                             Background="#Dfe7e8"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MaxWidth="400"
                             Margin="5"
                             FontWeight="Bold"
                             FontSize="15"
                             Foreground="MediumAquamarine"
                             Grid.Column="0"
                             IsEnabled="False"
                             materialDesign:HintAssist.Hint="MÃ NHÂN VIÊN"/>

                    <TextBox Style="{StaticResource MaterialDesignFilledTextBox}"
                             VerticalAlignment="Top"
                             Text="{Binding TenNV}"
                             Width="auto"
                             Height="60"
                             Background="#Dfe7e8"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MaxWidth="400"
                             Margin="5"
                             FontWeight="Bold"
                             FontSize="15"
                             Foreground="MediumAquamarine"
                             Grid.Column="1"
                             materialDesign:HintAssist.Hint="TÊN NHÂN VIÊN"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Style="{StaticResource MaterialDesignComboBox}"
                             VerticalAlignment="Top"
                             Text="{Binding GioiTinh}"
                             ItemsSource="{Binding ListGioiTinh}"
                             DisplayMemberPath="GioiTinh"
                             Width="auto"
                             Height="60"
                             Background="#Dfe7e8"
                             MaxWidth="400"
                             Margin="5"
                             FontWeight="Bold"
                             FontSize="15"
                             Foreground="MediumAquamarine"
                             Grid.Column="0"
                             materialDesign:HintAssist.Hint="GIỚI TÍNH"/>

                    <DatePicker Grid.Column="1"
                                Style="{StaticResource MaterialDesignFilledDatePicker}"
                                VerticalAlignment="Top"
                                SelectedDate="{Binding NgaySinh, StringFormat='dd/MM/yyyy'}"
                                Width="auto"
                                Height="60"
                                Background="#Dfe7e8"
                                MaxWidth="400"
                                Margin="5"
                                FontWeight="Bold"
                                FontSize="15"
                                Foreground="MediumAquamarine"
                                materialDesign:HintAssist.Hint="NGÀY SINH"/>
                </Grid>

                <TextBox Style="{StaticResource MaterialDesignFilledTextBox}"
                             VerticalAlignment="Top"
                             Text="{Binding SDT}"
                             Width="auto"
                             Height="60"
                             Background="#Dfe7e8"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MaxWidth="500"
                             Margin="5"
                             FontWeight="Bold"
                             FontSize="15"
                             Foreground="MediumAquamarine"
                             Grid.Row="2"
                             materialDesign:HintAssist.Hint="SỐ ĐIỆN THOẠI"/>

                <TextBox Style="{StaticResource MaterialDesignFilledTextBox}"
                        VerticalAlignment="Top"
                        Text="{Binding Email}"
                        Width="AUTO"
                        Height="60"
                        Background="#Dfe7e8"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        MaxWidth="500"
                        Margin="5"
                        FontWeight="Bold"
                        FontSize="15"
                        Foreground="MediumAquamarine"
                        Grid.Row="3"
                        materialDesign:HintAssist.Hint="EMAIL"/>

                <TextBox Style="{StaticResource MaterialDesignFilledTextBox}"
                        VerticalAlignment="Top"
                        Text="{Binding DiaChi}"
                        Width="AUTO"
                        Height="60"
                        Background="#Dfe7e8"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        MaxWidth="500"
                        Margin="5"
                        FontWeight="Bold"
                        FontSize="15"
                        Foreground="MediumAquamarine"
                        Grid.Row="4"
                        materialDesign:HintAssist.Hint="ĐỊA CHỈ"/>

                <TextBox Style="{StaticResource MaterialDesignFilledTextBox}"
                        VerticalAlignment="Top"
                        Text="{Binding PasswordDangKy, StringFormat={}{0:#,#}}"
                        Width="AUTO"
                        Height="60"
                        Background="#Dfe7e8"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        MaxWidth="500"
                        Margin="5"
                        FontWeight="Bold"
                        FontSize="15"
                        Foreground="MediumAquamarine"
                        Grid.Row="5"
                        materialDesign:HintAssist.Hint="MẬT KHẨU ĐĂNG NHẬP"/>

                <Button Grid.Row="6"
                        Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}"
                        Content="ĐĂNG KÝ"
                        FontWeight="Bold"
                        Height="50"
                        Width="auto"
                        FontSize="15"
                        Margin="5"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Background="MediumAquamarine"
                        BorderBrush="Aquamarine"
                        BorderThickness="2"
                        Command="{Binding DangKyNhanVien}"
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />
            </Grid>
        </Grid>
    </Grid>
</Window>
